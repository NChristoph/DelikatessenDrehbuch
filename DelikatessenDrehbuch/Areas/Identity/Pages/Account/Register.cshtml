@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}



<div class="mobieleWidth100 minWidth100 flex flexJustifyContendCenter" style="margin-top:30vh">
    <div class="mobieleWidth100 minWidth50 maxWidth50">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            
            <div class="minWidth100 flex flexJustifyContendCenter">
                <h2 class="mt-3" style=" color: #D4AF37;font-family:'Lucida Handwriting'">Registrieren</h2>
            </div>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mt-2">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mt-2">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password">Passwort</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mt-2">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword">Passwort bestätigen</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="flex minWidth100 flexJustifyContendEnd mt-3">
                <button id="registerSubmit" type="submit" class="btn bgRed" style="color:#FFFDD0">Registrieren</button>

            </div>
        </form>
    </div>
   
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
