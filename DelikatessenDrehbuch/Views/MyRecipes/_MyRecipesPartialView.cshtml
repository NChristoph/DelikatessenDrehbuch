@using Microsoft.AspNetCore.Identity
@model List<Recipes>
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


<div class="minWidth100 flex flexJustifyContendCenter">
    <div class="grid-Container maxWidth80 mobieleWidth100 ">

        @{
            foreach (var recipe in Model)
            {
                <div class="grid-Recipes grid-Item ">
                    <a class="text-black grid-atag" asp-route-id="@recipe.Id" asp-controller="NewRecipes" asp-action="Index" style="text-decoration:none;">

                        @if (!string.IsNullOrEmpty(recipe.ImagePath))
                        {
                            <img class="grid-Image " title="@recipe.Name" src="@recipe.ImagePath" loading="lazy" style="max-width:100%" />
                        }
                        else
                        {
                            <img class="grid-Image" src="https://cdn.pixabay.com/photo/2020/04/22/18/22/excuse-me-5079442_640.jpg" loading="lazy" />

                        }


                    </a>
                    <hr class="grid-hr" style="margin:1px;" />
                    <div class="grid-LikeCount"> Gefält @recipe.LikeCount <br /> Benutzer</div>
                    <div class="grid-Category">@recipe.Category</div>
                    <h3 class="grid-Title" style="text-align:center;grid-column:1/span 2;">@recipe.Name</h3>

                    @{
                        if (SignInManager.IsSignedIn(User))
                        {
                            if (User.IsInRole("Admin"))
                            {

                                <a asp-route-id="@recipe.Id" asp-controller="MyRecipes" asp-action="DeleteRecipes" class="bg-transparent grid-DeleteButton" title="DeleteButton">
                                    
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#D4AF37" class="bi bi-trash3" viewBox="0 0 16 16">
                                        <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5M11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47M8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5" />
                                    </svg>
                                </a>

                            }
                        }
                    }
                </div>






            }
        }

    </div>
</div>

