@model List<Recipes>




<div class="w60 handyCenter handyWidth100 raster mt-3">



    @{


        //<h1 style="text-align:center;">Es wurden @Model.Count Rezepte gefunden</h1>
        foreach (var recipe in Model)
        {

            <a asp-route-id="@recipe.Id" asp-controller="SelectedRecipe" asp-action="Index" type="button" typeof="button" class="text-dark btn flex flexColumn m-1" style="text-align:left;padding:0px;height:100%">
                <div style="height:100%">
                    <div class="row" style="height:75%">
                        @if (!string.IsNullOrEmpty(recipe.ImagePath))
                        {
                            <img class=" recipeImage " src="@recipe.ImagePath" loading="lazy" />
                        }
                        else
                        {
                            <img class=" recipeImage" src="https://cdn.pixabay.com/photo/2020/04/22/18/22/excuse-me-5079442_640.jpg" loading="lazy" />

                        }
                    </div>
                    <div class="flex flexRow acenter w100" style="margin-left:10px;">
                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="#FFD700" class="bi bi-star-fill" viewBox="0 0 16 16">
                            <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
                        </svg>
                        <div style="margin-left:0.25rem"> @recipe.LikeCount</div>
                        <div style="margin-left:auto;margin-right:2rem">@recipe.Category</div>
                    </div>
                    <div class="flex flexRow">
                        <h5 style="margin-left:10px;">@recipe.Name</h5>
                    </div>
                  
                </div>


            </a>


        }
    }


</div>


